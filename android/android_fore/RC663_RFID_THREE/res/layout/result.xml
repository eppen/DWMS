<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout android:id="@+id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"

	android:shrinkColumns="1"
	android:stretchColumns="1"
>

        <TableRow
    android:layout_width="match_parent">
<TextView 
       android:text="RFID:"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="1"
       android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
    </TextView> 
<TextView   
       android:text="无信息"
       android:id="@+id/rfid"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="2"
      android:layout_gravity="right"
      android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
     </TextView>   
</TableRow>
        
<TableRow
    android:layout_width="match_parent">
<TextView 
       android:id="@+id/prompt"
       android:text="包装类型:"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="1"
      android:background="@drawable/cell_shape"
       android:layout_width="0dip"
       android:layout_height="fill_parent"> 
    </TextView> 
<TextView 
       android:id="@+id/wrap"
       android:text="无信息"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="2"
      android:background="@drawable/cell_shape"
      android:layout_gravity="right"
       android:layout_width="0dip"
       android:layout_height="fill_parent"> 
     </TextView>   
</TableRow>	
<TableRow
    android:layout_width="match_parent">
<TextView 
       android:text="数量:"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="1"
       android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
    </TextView> 
<TextView   
       android:text="无信息"
       android:id="@+id/num"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="2"
      android:layout_gravity="right"
      android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
     </TextView>   
</TableRow>

<TableRow
    android:layout_width="match_parent">
<TextView 
       android:text="废物代码:"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="1"
       android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
    </TextView> 
<TextView   
       android:text="无信息"
       android:id="@+id/waste_code"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="2"
      android:layout_gravity="right"
      android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
     </TextView>   
</TableRow>

<TableRow
    android:layout_width="match_parent">
<TextView 
       android:text="废物类型:"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="1"
       android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
    </TextView> 
<TextView   
       android:text="无信息"
       android:id="@+id/waste_type"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="2"
      android:layout_gravity="right"
      android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
     </TextView>   
</TableRow>

<TableRow
    android:layout_width="match_parent">
<TextView 
       android:text="运输许可:"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="1"
       android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
    </TextView> 
<TextView   
       android:text="无信息"
       android:id="@+id/permission"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:padding="5dp"
       android:layout_weight="2"
      android:layout_gravity="right"
      android:layout_width="0dip"
      android:background="@drawable/cell_shape"
       android:layout_height="fill_parent"> 
     </TextView>   
</TableRow>
</TableLayout>

 <LinearLayout android:id="@+id/LinearLayout02"
  android:layout_width="fill_parent"
  
  android:orientation="vertical"
  android:gravity="bottom|end"
  android:layout_height="fill_parent">
   <Button android:text="更多详情"
   android:textSize="9pt"
   android:id="@+id/button_detail" 
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"></Button>
  </LinearLayout>
    

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".ScanAndUpload" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_addNew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:text="修改重量" />

        <AbsoluteLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="265dp" >

            <Button
                android:id="@+id/button_15693_search"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.48"
                android:layout_x="68dp"
                android:layout_y="97dp"
                android:text="扫描"
                android:textSize="30dp" />

        </AbsoluteLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_15693_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:text="@string/text_null" />

        <TextView
            android:id="@+id/textView_15693_cardinfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:text="@string/text_null" />

        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>